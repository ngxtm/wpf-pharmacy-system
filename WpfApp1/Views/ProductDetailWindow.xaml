<Window x:Class="WpfApp1.Views.ProductDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết sản phẩm" Height="690" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8F9FA">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0056B3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004085"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#545B62"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E7E34"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="White" 
                BorderBrush="#E9ECEF" 
                BorderThickness="0,0,0,1"
                Height="60"
                VerticalAlignment="Top">
            <Grid Margin="20,0">
                <TextBlock Text="Chi tiết sản phẩm" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          VerticalAlignment="Center"
                          Foreground="#212529"/>
            </Grid>
        </Border>

        <ScrollViewer Margin="0,60,0,80" VerticalScrollBarVisibility="Auto">
            <Grid Margin="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        Background="White" 
                        CornerRadius="12"
                        Margin="0,0,20,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" 
                                        Opacity="0.1" 
                                        ShadowDepth="2" 
                                        BlurRadius="8"/>
                    </Border.Effect>
                    <Grid>
                        <Image x:Name="ProductImage" 
                               Stretch="Uniform"
                               MaxHeight="350"
                               Margin="20"/>
                        <Border Background="#F8F9FA" 
                                CornerRadius="12"
                                x:Name="PlaceholderBorder">
                            <TextBlock Text="📦" 
                                     FontSize="48" 
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"
                                     Foreground="#ADB5BD"/>
                        </Border>
                    </Grid>
                </Border>

                <StackPanel Grid.Column="1">
                    <TextBlock x:Name="ProductName" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="#212529"
                              TextWrapping="Wrap"
                              Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <Border Background="#E3F2FD" 
                                CornerRadius="15" 
                                Padding="8,4">
                            <TextBlock x:Name="ProductCategory" 
                                      FontSize="12" 
                                      Foreground="#1976D2"/>
                        </Border>
                        <Border Background="#F3E5F5" 
                                CornerRadius="15" 
                                Padding="8,4"
                                Margin="10,0,0,0">
                            <TextBlock x:Name="ProductManufacturer" 
                                      FontSize="12" 
                                      Foreground="#7B1FA2"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="Giá: " 
                                  FontSize="18" 
                                  Foreground="#6C757D"/>
                        <TextBlock x:Name="ProductPrice" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Foreground="#DC3545"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="Tồn kho: " 
                                  FontSize="16" 
                                  Foreground="#6C757D"/>
                        <TextBlock x:Name="ProductStock" 
                                  FontSize="16" 
                                  FontWeight="SemiBold"/>
                    </StackPanel>

                    <TextBlock Text="Mô tả sản phẩm" 
                              FontSize="18" 
                              FontWeight="SemiBold" 
                              Foreground="#212529"
                              Margin="0,0,0,10"/>
                    
                    <Border Background="White" 
                            CornerRadius="8" 
                            Padding="15"
                            BorderBrush="#E9ECEF"
                            BorderThickness="1"
                            Margin="0,0,0,20">
                        <TextBlock x:Name="ProductDescription" 
                                  FontSize="14" 
                                  LineHeight="22"
                                  TextWrapping="Wrap" 
                                  Foreground="#495057"/>
                    </Border>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Column="0" Grid.Row="0" 
                                Background="White" 
                                CornerRadius="8" 
                                Padding="15"
                                BorderBrush="#E9ECEF"
                                BorderThickness="1"
                                Margin="0,0,5,10">
                            <StackPanel>
                                <TextBlock Text="Ngày tạo" 
                                          FontSize="12" 
                                          Foreground="#6C757D"/>
                                <TextBlock x:Name="ProductCreatedAt" 
                                          FontSize="14" 
                                          FontWeight="SemiBold"
                                          Foreground="#212529"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Grid.Row="0" 
                                Background="White" 
                                CornerRadius="8" 
                                Padding="15"
                                BorderBrush="#E9ECEF"
                                BorderThickness="1"
                                Margin="5,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Cập nhật" 
                                          FontSize="12" 
                                          Foreground="#6C757D"/>
                                <TextBlock x:Name="ProductUpdatedAt" 
                                          FontSize="14" 
                                          FontWeight="SemiBold"
                                          Foreground="#212529"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                                Background="White" 
                                CornerRadius="8" 
                                Padding="15"
                                BorderBrush="#E9ECEF"
                                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Trạng thái" 
                                          FontSize="12" 
                                          Foreground="#6C757D"/>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse x:Name="StatusIndicator" 
                                            Width="8" Height="8" 
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Center"/>
                                    <TextBlock x:Name="ProductStatus" 
                                              FontSize="14" 
                                              FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <Border Background="White" 
                BorderBrush="#E9ECEF" 
                BorderThickness="0,1,0,0"
                Height="80"
                VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Center"
                       Margin="30,0">
                <Button Content="Đóng" 
                        Style="{StaticResource SecondaryButton}"
                        Width="100"
                        Margin="0,0,15,0"
                        Click="CloseButton_Click"/>
                <Button x:Name="AddToCartButton"
                        Content="Thêm vào giỏ hàng" 
                        Style="{StaticResource SuccessButton}"
                        Width="150"
                        Click="AddToCartButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>