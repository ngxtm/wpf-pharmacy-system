<Window x:Class="WpfApp1.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MediSchool - Đăng nhập" Height="750" Width="1300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Background>
        <SolidColorBrush Color="#B3D5F2"/>
    </Window.Background>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Top" 
            HorizontalAlignment="Left" 
            Margin="30,30,0,0">
            <TextBlock Text="MediSchool" 
               FontSize="18" 
               FontWeight="Bold" 
               Foreground="#023E73" 
               Margin="0,0,0,5"/>
            <TextBlock Text="Chào mừng trở lại!" 
               FontSize="12" 
               Foreground="#023E73" 
               Opacity="0.8"/>
        </StackPanel>
        <!-- Left Side - Login Form -->
        <Grid Grid.Column="0" Background="Transparent">
            <StackPanel VerticalAlignment="Center" 
                       HorizontalAlignment="Center" 
                       Width="400" 
                       Margin="50,40">
                
                <!-- Login Header -->
                <TextBlock Text="Vui lòng đăng nhập để tiếp tục" 
                          FontSize="22" 
                          FontWeight="SemiBold" 
                          Foreground="#2C3E50" 
                          HorizontalAlignment="Center"
                          TextWrapping="Wrap"
                          TextAlignment="Center"
                          Margin="0,0,0,15"/>
                
                <TextBlock Text="Thực hiện hồ sơ y tế của con bạn một cách an toàn" 
                          FontSize="14" 
                          Foreground="#7F8C8D" 
                          HorizontalAlignment="Center"
                          TextWrapping="Wrap"
                          TextAlignment="Center"
                          Margin="0,0,0,35"/>

                <!-- Email Input -->
                <TextBlock Text="Địa chỉ email" 
                          FontSize="14" 
                          Foreground="#2C3E50" 
                          Margin="0,0,0,8"/>
                <TextBox x:Name="UsernameTextBox" 
                        Height="45" 
                        FontSize="14"
                        Padding="15,12"
                        BorderBrush="#E1E8ED"
                        BorderThickness="1"
                        Background="#F8F9FA"
                        Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                        Margin="0,0,0,20">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#667eea"/>
                                    <Setter Property="Background" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Password Input -->
                <TextBlock Text="Mật khẩu" 
                          FontSize="14" 
                          Foreground="#2C3E50" 
                          Margin="0,0,0,8"/>
                <PasswordBox x:Name="PasswordBox" 
                            Height="45" 
                            FontSize="14"
                            Padding="15,12"
                            BorderBrush="#E1E8ED"
                            BorderThickness="1"
                            Background="#F8F9FA"
                            PasswordChanged="PasswordBox_PasswordChanged"
                            Margin="0,0,0,10">
                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox">
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#667eea"/>
                                    <Setter Property="Background" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>

              

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                          Foreground="#E74C3C" 
                          FontSize="12"
                          Margin="0,0,0,15"
                          TextWrapping="Wrap"
                          Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Login Button -->
                <Button Content="Đăng nhập" 
                       Height="50" 
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="White"
                       BorderThickness="0"
                       Margin="0,0,0,20"
                       Command="{Binding LoginCommand}"
                       Cursor="Hand">
                    <Button.Background>
                        <SolidColorBrush Color="#023E73"/>
                    </Button.Background>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

              

                

                <!-- Footer -->
                <TextBlock HorizontalAlignment="Center" 
                          FontSize="12" 
                          Foreground="#7F8C8D">
                    <Run Text="© 2025 MediSchool Bản quyền. Tất cả các quyền được bảo lưu."/>
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- Right Side - Illustration -->
        <Grid Grid.Column="1">
            <Grid.Background>
                <SolidColorBrush Color="#B3D5F2"/>
            </Grid.Background>
            
            
            <!-- Centered image -->
            <Image Source="/images/login-image-j8vuKxbq.png" 
                   Width="500" 
                   Height="350" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Stretch="Uniform"/>
        </Grid>
    </Grid>
</Window> 